#include <iostream>
#include"funcs.h"

using namespace std;

/* FUNCTION TO RETURN AVERAGE OF 2 NUMBERS */
double average(double var1) {
  return var1;
}
/* FUNCTION TO RETURN AVERAGE OF 2 NUMBERS */
double average(double var1, double var 2) {
  double solution = (var1+var2)/2.;
  return solution;
}
/* END OF FUNCTION */

/* FUNCTION TO RETURN AVERAGE OF 3 NUMBERS */
double average(double var1, double var2, double var3) {
  double solution = (var1+var2+var3)/3.;
  return solution;
}
/* END OF FUNCTION */

/* FUNCTION TO RETURN AVERAGE OF 4 NUMBERS */
double average(double var1, double var2, double var3, double var4) {
  double solution = (var1+var2+var3+var4)/4.;
  return solution;
}
/* END OF FUNCTION */

/* FUNCTION TO RETURN STD of 1 NUMBERS */
double std(double var1) {
  return 0.;
}
/* END OF FUNCTION */

/* FUNCTION TO RETURN STD OF 2 NUMBERS */
double std(double var1, double var2) {
  double a = average(var1, var2);
  double solution = average((var1-a),(var2-a));
  return solution;
}
/* END OF FUNCTION */

/* FUNCTION TO RETURN STD OF 3 NUMBERS */
double std(double var1, double var2, double var3) {
  double a = average(var1, var2, var3);
  double solution = average((var1-a),(var2-a), (var3-a));
  return solution;
}
/* END OF FUNCTION */

/* FUNCTION TO RETURN STD OF 4 NUMBERS */
double std(double var1, double var2, double var3, double var4) {
  double a = average(var1, var2, var3,var4);
  double solution = average((var1-a),(var2-a), (var3-a),(var4-a));
  return solution;
}
/* END OF FUNCTION */
